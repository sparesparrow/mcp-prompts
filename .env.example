# PostgreSQL connection string (required for database storage)
DATABASE_URL=postgresql://mcp_user:your_password@localhost:5432/mcp_prompts

# Storage type (file or pgai)
STORAGE_TYPE=pgai

# Server configuration
PORT=3000
HOST=localhost
LOG_LEVEL=info

# Storage location for prompts (used with file storage)
PROMPTS_DIR=./prompts

# Node environment
NODE_ENV=development

# If using Docker Compose
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=mcp_prompts