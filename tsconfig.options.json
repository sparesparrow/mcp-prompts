{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "target": "esnext",
    "paths": {
      "@sparesparrow/mcp-prompts-contracts": [
        "packages/@sparesparrow/mcp-prompts-contracts/src"
      ],
      "@sparesparrow/mcp-prompts-contracts/*": [
        "packages/@sparesparrow/mcp-prompts-contracts/src/*"
      ],
      "@sparesparrow/mcp-prompts-core": [
        "packages/core/src"
      ],
      "@sparesparrow/mcp-prompts-core/*": [
        "packages/core/src/*"
      ],
      "@sparesparrow/mcp-prompts-adapters-*": [
        "packages/adapters-*/src/*"
      ],
      "@sparesparrow/mcp-prompts-server": [
        "apps/server/src"
      ],
      "@sparesparrow/mcp-prompts-server/*": [
        "apps/server/src/*"
      ]
    }
  }
}
