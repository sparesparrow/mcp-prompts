{
  "name": "@sparesparrow/mcp-prompts",
  "version": "1.2.4",
  "description": "MCP server for managing prompts and templates with project orchestration capabilities",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "mcp-prompts": "./build/cli.js"
  },
  "scripts": {
    "build": "npx tsc && npm run copy-static-files && chmod +x build/index.js && node ./scripts/build/fix-build.js && node ./scripts/build/ensure-config.js",
    "copy-static-files": "cp package.json build/ && cp README.md build/ && mkdir -p build/data/prompts build/data/backups",
    "start": "node build/index.js",
    "dev": "nodemon --watch src --ext ts,js --exec \"npm run build && npm start\"",
    "prepare": "node -e \"process.env.CI || process.env.DOCKER_BUILD ? console.log('Skipping prepare in CI/Docker') : process.exit(1)\" || npm run build",
    "test": "jest",
    "test:build": "./scripts/test/test-build.sh",
    "test:docker": "./scripts/test/test-docker-build.sh",
    "docker:build": "docker build -t sparesparrow/mcp-prompts:latest .",
    "docker:up": "docker-compose -f docker/docker-compose.yml up",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "publish:all": "./publish.sh",
    "test:package": "./scripts/test/test-published-package.sh",
    "test:integration": "node tests/integration/run-mcp-tests.js"
  },
  "files": [
    "build",
    "README.md"
  ],
  "keywords": [
    "mcp",
    "prompt",
    "manager",
    "claude",
    "anthropic",
    "project-orchestrator"
  ],
  "author": "sparesparrow",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "dotenv": "^16.4.7",
    "fs-extra": "^11.3.0",
    "pg": "^8.13.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^18.19.1",
    "@types/pg": "^8.11.11",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.6",
    "tsc-esm-fix": "^3.1.2",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sparesparrow/mcp-prompt-manager.git"
  }
}
