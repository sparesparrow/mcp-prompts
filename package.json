{
  "name": "@sparesparrow/mcp-prompt-manager",
  "version": "1.1.9",
  "description": "MCP server for managing prompts and templates with project orchestration capabilities",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "mcp-prompt-manager": "build/index.js"
  },
  "scripts": {
    "build": "npx tsc && npm run copy-files && npm run make-executable",
    "copy-files": "node -e \"const fs=require('fs');const path=require('path');const dirs=['build/src/utils','build/src'];dirs.forEach(dir=>{if(!fs.existsSync(dir)){fs.mkdirSync(dir,{recursive:true})}}); const files=['src/utils/db.js','src/config.js'];files.forEach(file=>{if(fs.existsSync(file)){fs.copyFileSync(file,'build/'+file)}});fs.copyFileSync('package.json','build/package.json');\"",
    "make-executable": "chmod +x build/index.js",
    "start": "node build/index.js",
    "dev": "nodemon --watch src --ext ts,js --exec \"npm run build && npm start\"",
    "prepare": "npm run build",
    "test": "jest",
    "docker:build": "docker build -t mcp-prompts .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "files": [
    "build",
    "README.md"
  ],
  "keywords": [
    "mcp",
    "prompt",
    "manager",
    "claude",
    "anthropic",
    "project-orchestrator"
  ],
  "author": "sparesparrow",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.7.0",
    "dotenv": "^16.4.7",
    "fs-extra": "^11.3.0",
    "pg": "^8.13.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^18.19.1",
    "@types/pg": "^8.11.11",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sparesparrow/mcp-prompt-manager.git"
  }
}
