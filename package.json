{
  "name": "@sparesparrow/mcp-prompts",
  "version": "3.1.0",
  "description": "Model Context Protocol server for managing, storing, and providing prompts and prompt templates for LLM interactions.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-prompts": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc && chmod +x dist/index.js",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "prepare": "npm run build",
    "publish:all": "npm run build && npm publish"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "prompts",
    "templates",
    "ai",
    "llm"
  ],
  "author": "sparesparrow",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.16.0",
    "@sparesparrow/mcp-prompts-contracts": "^1.0.0",
    "@sparesparrow/mcp-prompts-catalog": "^1.0.0",
    "zod": "^3.23.8",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sparesparrow/mcp-prompts.git"
  },
  "bugs": {
    "url": "https://github.com/sparesparrow/mcp-prompts/issues"
  },
  "homepage": "https://github.com/sparesparrow/mcp-prompts#readme"
}
