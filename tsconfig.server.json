{
  "extends": "./tsconfig.options.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "declaration": false,
    "sourceMap": false,
    "composite": false
  },
  "include": [
    "src/**/*.ts", 
    "packages/*/src/**/*.ts",
    "packages/@sparesparrow/*/src/**/*.ts"
  ],
  "exclude": [
    "node_modules", 
    "dist",
    "**/node_modules",
    "**/dist",
    "**/*.test.ts"
  ]
}

