{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "@core/*": ["../../src/*", "../../packages/core/src/*"],
      "@adapters-file/*": ["../../packages/adapters-file/src/*"],
      "@adapters-memory/*": ["../../packages/adapters-memory/src/*"]
    },
    "baseUrl": "../../",
    "composite": true,
    "declaration": true
  },
  "include": [
    "src/**/*",
    "../../src/errors.ts",
    "../../src/schemas.ts"
  ],
  "references": [
    { "path": "../core" }
  ]
}
